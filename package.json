{
  "author": "Zestia",
  "name": "@zestia/ember-simple-infinite-scroller",
  "version": "11.0.0",
  "description": "Simple infinite scroller component for Ember apps",
  "keywords": [
    "ember-addon",
    "infinite",
    "scroll"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zestia/ember-simple-infinite-scroller.git"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./addon-main.js": "./addon-main.cjs",
    "./*.css": "./dist/*.css",
    "./*": {
      "default": "./dist/*.js"
    }
  },
  "files": [
    "addon-main.cjs",
    "declarations",
    "dist",
    "src"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "rollup --config",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\" --prefixColors auto",
    "lint:fix": "concurrently \"npm:lint:*:fix\" --names \"fix:\" --prefixColors auto && npm run format",
    "lint:format": "prettier . --cache --check",
    "lint:hbs": "ember-template-lint . --no-error-on-unmatched-pattern",
    "lint:hbs:fix": "ember-template-lint . --fix --no-error-on-unmatched-pattern",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "prepack": "rollup --config",
    "start": "vite dev",
    "test": "vite build --mode=development --out-dir dist-tests && testem --file testem.cjs ci --port 0",
    "release": "release-it"
  },
  "dependencies": {
    "@ember/test-helpers": "^5.2.1",
    "@embroider/addon-shim": "^1.8.9",
    "decorator-transforms": "^2.2.2",
    "ember-modifier": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/runtime": "^7.25.6",
    "@ember/app-tsconfig": "^1.0.0",
    "@ember/library-tsconfig": "^1.0.0",
    "@ember/test-waiters": "^4.1.1",
    "@embroider/addon-dev": "^8.1.0",
    "@embroider/compat": "^4.1.0",
    "@embroider/core": "^4.1.0",
    "@embroider/macros": "^1.18.0",
    "@embroider/vite": "^1.1.5",
    "@eslint/js": "^9.17.0",
    "@glimmer/component": "^2.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@zestia/eslint-config": "^7.0.2",
    "@zestia/prettier-config": "^1.3.5",
    "@zestia/template-lint-config": "^6.3.0",
    "babel-plugin-ember-template-compilation": "^2.2.5",
    "concurrently": "^9.0.1",
    "ember-page-title": "^9.0.3",
    "ember-qunit": "^9.0.2",
    "ember-route-template": "^1.0.3",
    "ember-source": "^6.7.0",
    "ember-strict-application-resolver": "^0.1.0",
    "ember-template-lint": "^7.9.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-ember": "^12.3.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "globals": "^16.1.0",
    "prettier": "^3.4.2",
    "prettier-plugin-ember-template-tag": "^2.0.4",
    "qunit": "^2.24.1",
    "qunit-dom": "^3.4.0",
    "release-it": "^17.0.1",
    "rollup": "^4.22.5",
    "testem": "^3.15.1",
    "vite": "^7.1.9"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {
      "./components/infinite-scroller.js": "./dist/_app_/components/infinite-scroller.js",
      "./test-helpers/scroll-to-percentage.js": "./dist/_app_/test-helpers/scroll-to-percentage.js"
    }
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test"
      ]
    }
  }
}
